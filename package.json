{
  "name": "sentinel-cli",
  "version": "1.8.0",
  "description": "Sentinel - AI-Powered Code Guardian: Automated code review with security scanning, dependency analysis, accessibility checks, TypeScript/React analysis, API security, secrets detection, and multi-LLM integration",
  "main": "src/index.js",
  "type": "module",
  "bin": {
    "sentinel": "./src/cli.js"
  },
  "files": [
    "src/**/*",
    "dist/**/*",
    "frontend/build/**/*",
    "README.md",
    ".env.example",
    ".sentinel.json.example"
  ],
  "scripts": {
    "start": "node src/cli.js",
    "launch": "node src/cli.js dashboard",
    "dev": "node --watch src/cli.js",
    "auth": "node src/cli.js auth",
    "config": "node src/cli.js config",
    "review": "node src/cli.js analyze",
    "security": "node src/cli.js security-audit",
    "full-scan": "node src/cli.js full-scan",
    "frontend": "node src/cli.js frontend",
    "backend": "node src/cli.js backend",
    "pre-commit": "node src/cli.js pre-commit --block",
    "install-hooks": "node src/cli.js install-hooks",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "build": "node src/build.js",
    "build:frontend": "cd frontend && npm install && npm run build",
    "build:all": "npm run build && npm run build:frontend",
    "dashboard": "node src/cli.js dashboard",
    "deploy": "npm run build:frontend && npx vercel --prod",
    "demo": "node src/demo.js",
    "prepublishOnly": "npm run lint && npm run build:all",
    "postversion": "git push && git push --tags",
    "postinstall": "echo \"\nâœ¨ Sentinel CLI installed! Run 'sentinel auth' to configure your API keys or 'sentinel dashboard' to see the UI.\n\""
  },
  "keywords": [
    "code-review",
    "automation",
    "security",
    "quality",
    "git",
    "cli",
    "ai",
    "static-analysis",
    "linter",
    "vulnerability",
    "dependency-check",
    "accessibility",
    "a11y",
    "wcag",
    "openai",
    "gemini",
    "groq",
    "llm",
    "pre-commit",
    "devops",
    "cicd"
  ],
  "author": "Kunj Shah",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.1.3",
    "@vercel/analytics": "^1.6.1",
    "axios": "^1.6.2",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "diff": "^5.1.0",
    "eslint": "^8.55.0",
    "eslint-plugin-security": "^1.7.1",
    "figlet": "^1.7.0",
    "gradient-string": "^2.0.2",
    "groq-sdk": "^0.3.3",
    "handlebars": "^4.7.8",
    "inquirer": "^9.2.12",
    "jshint": "^2.13.6",
    "marked": "^11.1.0",
    "ora": "^7.0.1",
    "semver": "^7.5.4",
    "simple-git": "^3.24.0",
    "sirv": "^3.0.2",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KunjShah95/Sentinel-CLI.git"
  },
  "bugs": {
    "url": "https://github.com/KunjShah95/Sentinel-CLI/issues"
  },
  "homepage": "https://github.com/KunjShah95/Sentinel-CLI#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}